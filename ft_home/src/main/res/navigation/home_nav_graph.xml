<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.smb.ft_main.presentation.home.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/toSecondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.smb.ft_main.presentation.detail.TaskDetailFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/toFirstFragment"
            app:destination="@+id/auth_nav_graph" />
        <argument
            android:name="isbn"
            app:argType="string" />
    </fragment>
</navigation>